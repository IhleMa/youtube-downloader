{
  "name": "youtube-downloader",
  "version": "0.0.2",
  "description": "Allows you to download complete Youtube Playlists.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "author": "Marvin Ihle",
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "downloads-folder": "^3.0.1",
    "electron-updater": "^4.3.9",
    "express": "^4.17.1",
    "ytdl-core": "^4.8.2",
    "ytpl": "^2.2.1"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/IhleMa/youtube-downloader.git"
  },
  "build": {
    "appId": "io.github.ihlema.youtube-downloader",
    "productName": "Youtube Playlist Downloader",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "publish": [{
      "provider": "github",
      "owner": "IhleMa",
      "repo": "youtube-downloader"
    }]
  }
}
